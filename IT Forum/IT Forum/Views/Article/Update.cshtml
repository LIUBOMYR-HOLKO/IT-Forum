@model IT_Forum.Models.Entities.Post

@{
    ViewData["Title"] = "Update Post";
}

<h1>Update</h1>


<div>
    <form method="POST">
        <div asp-validation-summary="ModelOnly"></div>
        <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-10">
                <input class="input-group-text w-100" asp-for="Title" value="@Model.Title"/>
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Context)
            </dt>
            <dd class="col-10">
                <textarea class="w-100" style="height: 500px" asp-for="Context" value="@Model.Context"></textarea>
            </dd>
        </dl>
        <div class="w-100">
            <button class="btn btn-light border-dark text-center" type="submit">Update</button>
        </div>
    </form>
</div>